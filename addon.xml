<?xml version="2.5" encoding="UTF-8" standalone="yes"?>
<addon id="sddev.serial.stream" version="2.5.0" name="Serial Stream" provider-name="SDDev">
    <requires>
        <import addon="xbmc.python" version="3.0.0" />
        <import addon="script.module.requests"/>
    </requires>
    <extension point="xbmc.python.pluginsource" library="default.py">
        <provides>video</provides>
    </extension>
    <extension point="xbmc.addon.metadata">
        <summary lang="en">Stream serial shows INDIAN TV serials and Web serise for free.</summary>
        <description lang="en">A Kodi add-on for streaming indian contant like TV serial episodes, and web serise.</description>
        <platform>all</platform>
        <assets>
            <icon>icon.png</icon>
            <fanart>fanart.jpg</fanart>
        </assets>
        <video_guide>
            <external>false</external>
        </video_guide>
    </extension>
</addon>